{
  "name": "Galactic Bloodshed C++26 Development",
  // Option 1: Use pre-built image from GitHub Container Registry (faster startup)
  // Uncomment the line below and comment out the "build" section to use pre-built image:
  // "image": "ghcr.io/kaladron/galactic-bloodshed/devcontainer:latest",
  
  // Option 2: Build image locally (slower startup, but always uses latest Dockerfile)
  "build": {
    "dockerfile": "Dockerfile",
    "context": "."
  },
  "customizations": {
    "vscode": {
      "settings": {
        "editor.formatOnSave": true,
        "C_Cpp.intelliSenseEngine": "disabled",
        "C_Cpp.autocomplete": "disabled",
        "C_Cpp.errorSquiggles": "disabled",
        "C_Cpp.formatting": "clangFormat",
        "cmake.options.statusBarVisibility": "visible",
        "cmake.options.advanced": {
          "build": {
            "statusBarVisibility": "visible",
            "projectStatusVisibility": "visible"
          },
          "ctest": {
            "statusBarVisibility": "visible",
            "projectStatusVisibility": "visible"
          }
        }
      },
      "extensions": [
        "ms-vscode.cpptools",
        "ms-vscode.cpptools-themes",
        "ms-vscode.cmake-tools",
        "llvm-vs-code-extensions.vscode-clangd"
      ]
    }
  }
}