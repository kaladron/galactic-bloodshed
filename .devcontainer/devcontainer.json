{
    "name": "My Debian Testing Codespace",
    "build": {
        "dockerfile": "Dockerfile" // Path to your Dockerfile
    },
    "remoteUser": "codespaceuser", // Specify the username created in Dockerfile
    "mounts": [
        "source=${localWorkspaceFolder},target=/workspaces/${localWorkspaceFolderBasename},type=bind,consistency=cached"
      ]
}