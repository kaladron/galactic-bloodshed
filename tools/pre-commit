#!/bin/bash
# SPDX-License-Identifier: Apache-2.0
#
# Git pre-commit hook to check code formatting.
# 
# To install this hook, run from the repository root:
#   ln -sf ../../tools/pre-commit .git/hooks/pre-commit
#
# To bypass the hook for a specific commit:
#   git commit --no-verify

set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

echo "üîç Checking code formatting..."

# Get the list of staged C++ files
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep -E '\.(cc|cppm|h)$' || true)

if [ -z "$STAGED_FILES" ]; then
    echo -e "${GREEN}‚úÖ No C++ files to check${NC}"
    exit 0
fi

# Check if build directory exists
if [ ! -d "build" ]; then
    echo -e "${RED}‚ùå Build directory not found. Please run: cmake -S . -B build${NC}"
    exit 1
fi

# Run format check
if ninja -C build format >/dev/null 2>&1; then
    # Check if there are any differences
    if ! git diff --quiet $STAGED_FILES; then
        echo -e "${RED}‚ùå Code formatting issues detected!${NC}"
        echo ""
        echo "The following files need formatting:"
        git diff --name-only $STAGED_FILES
        echo ""
        echo -e "${YELLOW}To fix formatting, run:${NC}"
        echo "  ninja -C build format-fix"
        echo ""
        echo -e "${YELLOW}Then stage and commit again.${NC}"
        echo ""
        echo "To bypass this check (not recommended):"
        echo "  git commit --no-verify"
        exit 1
    else
        echo -e "${GREEN}‚úÖ Code formatting is correct${NC}"
    fi
else
    echo -e "${RED}‚ùå Failed to run format check${NC}"
    echo "Make sure the build directory is configured:"
    echo "  cmake -S . -B build"
    exit 1
fi

exit 0
